{
	"author":           "murrty",
	"homepage_url":     "https://github.com/murrty/address-bar-shortcuts/tree/omnibox-4chan",
	"description":      "Directly connect to a 4chan board by typing \"b <board>\" in the url bar",
	"manifest_version": 2,
	"name":             "Address Bar Shortcuts (4chan) (Omnibox)",
	"version":          "1.0",
    
	"browser_specific_settings": {
		"gecko": {
			"id": "@address.bar.shortcuts.omni.4chan",
            "strict_min_version": "52.0"
		}
	},
    
	"developer":        {
		"name": "murrty",
		"url":  "https://github.com/murrty/address-bar-shortcuts/tree/omnibox-4chan"
	},
    
	"icons":            {
		"48": "icon/48.png",
		"96": "icon/96.png"
	},

	"permissions": [
		"webNavigation",
		"tabs"
	],
    
    "omnibox": {
        "keyword": "b"
    },
 
	"background": {
		"scripts": [
			"background.js"
		]
	}
}