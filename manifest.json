{
	"author":           "murrty",
	"homepage_url":     "https://github.com/murrty/address-bar-shortcuts/tree/omnibox-all",
	"description":      "Directly connect to websites using the url bar, 'r/' & 'u/' for reddit, 'b/' for 4chan, 'b8/' for 8chan",
	"manifest_version": 2,
	"name":             "Address Bar Shortcuts (All) (Omnibox)",
	"version":          "1.0",
    
	"browser_specific_settings": {
		"gecko": {
			"id": "@address.bar.shortcuts.omni.all",
            "strict_min_version": "52.0"
		}
	},
    
	"developer":        {
		"name": "murrty",
		"url":  "https://github.com/murrty/address-bar-shortcuts/tree/omnibox-all"
	},
    
	"icons":            {
		"48": "icon/48.png",
		"96": "icon/96.png"
	},

	"permissions": [
		"webNavigation",
		"tabs"
	],
    
    "omnibox": {
        "keyword": "r"
    },
 
	"background": {
		"scripts": [
			"background.js"
		]
	}
}